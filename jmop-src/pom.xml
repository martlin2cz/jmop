		</plugins>
	</build>
	
	<modules>
		<module>jmop-common-base</module>
		<module>jmop-common-storages</module>
		<module>jmop-common-musicbase</module>
		<module>jmop-common-testing</module>
		<module>jmop-common-fascade</module>

		<module>jmop-player-base</module>
		<module>jmop-player-players</module>
		<module>jmop-player-engine </module>
		<module>jmop-player-fascade</module>
